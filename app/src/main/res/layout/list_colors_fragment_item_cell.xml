<?xml version="1.0" encoding="utf-8"?>
<com.rodrigomadeiro.bootstrap.ui.listcolors.ListColorFragmentItemCellView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="@dimen/seventySix"
    android:background="@color/white"
    >

    <ImageView
        android:id="@+id/imgColor"
        android:layout_height="@dimen/thirtyEight"
        android:layout_width="@dimen/thirtyEight"

        tools:src="@tools:sample/avatars"
        android:contentDescription="@string/color"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/nineteen"
        />

    <TextView
        android:id="@+id/lblName"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"

        tools:text="White"

        app:layout_constraintLeft_toRightOf="@id/imgColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="@dimen/nineteen"
        />

</com.rodrigomadeiro.bootstrap.ui.listcolors.ListColorFragmentItemCellView>